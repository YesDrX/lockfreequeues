 {
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build tests",
            "command": "nim",
            "args": [
                "c",
                "tests/test.nim"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run tests",
            "command": "tests/test",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build example 'spscqueuestatic'",
            "command": "nim",
            "args": [
                "c",
                "examples/spscqueuestatic.nim"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": "build"
        },
     ]
 }
